# DeepSeek API 配置（备用）
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# Whisper 配置
WHISPER_MODEL=base  # 可选: tiny, base, small, medium, large
WHISPER_DEVICE=cpu  # 服务器用 cpu，本地 macOS M2 用 mps

# Azure Speech 发音评估配置
# 免费层 F0: 5小时/月
# 获取方式: https://portal.azure.com/ → 创建 Speech 资源
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=eastasia

# 阿里云百炼 API 配置 (Qwen-Plus, Qwen3-TTS, Qwen3-ASR)
# 获取方式: https://dashscope.console.aliyun.com/
DASHSCOPE_API_KEY=your_dashscope_api_key

# GitHub Webhook Secret（用于自动部署）
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# 应用配置
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
